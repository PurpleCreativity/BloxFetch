    "repository": {
        "type": "git",
        "url": "git+https://github.com/PurpleCreativity/BloxFetch.git"
    },
    "author": "PurpleCreativity",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PurpleCreativity/BloxFetch/issues"
    },
    "homepage": "https://github.com/PurpleCreativity/BloxFetch#readme",
    "dependencies": {
        "axios": "^1.7.7",
        "dotenv": "^16.4.5"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.9.0",
        "jest": "^29.7.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
